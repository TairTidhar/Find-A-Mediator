<!-- show.html.erb -->

<div class="container">
  <div class="god">

    <div class="row">
      <div class="col-md-5">
      </div>
      <div class="col-md-6">
      <h1 class="text-left"><%= @god.name %></h1>
      </div>
    </div>

      <div class="row">
        <div class="col-md-5">
          <div class="padding-image">
            <%= cl_image_tag @god.photo, height: 300, width: 400, crop: :fill, class:"rounded-image" %>
        </div>
        </div>

        <div class="col-md-6">
          <h4 class="text-left">Find me in:</h4>
          <p class="text-left"><%= @god.location %></p>
          <h4 class="text-left">About me: </h4>
          <p class="text-left"><%= @god.description %></p>
          <h4 class="text-left">Pricing:</h4>
          <p class="text-left">$<%= @god.price %> AUD per day</p>
          <h4 class="text-left">Power:</h4>
          <% @god.powers.each do |power| %>
            <%= power.name %>
          <% end %>
          <p class="text-left"></p>
        </div>
        </div>

        <% if current_user %>
         <div class="text-center">
         <p> <%= link_to "Remove God", god_path(@god), method: :delete, class: "btn btn-primary"%>
         <%= link_to "Update God", edit_god_path(@god), class: "btn btn-primary" %>
      <!--   <%= link_to "Add a power", new_god_god_power_path(@god), class: "btn btn-primary" %> -->
         <% end %>
         </p>
         </div>
      </div>
  </div>
</div>

<div class="container">
<div class="booking_form">
  <h1 class="text-center">Book <%= @god.name %></h1>
  <%= simple_form_for([@god, @booking]) do |f| %>
    <div class="col-md-6">
    <%= f.input :start_date, as: :string, required: true, input_html: {class: "datepicker"} %>
    </div>
    <div class="col-md-6">
    <%= f.input :end_date, as: :string, required: true, input_html: {class: "datepicker"} %>
    </div>
    <div class="text-center">
    <%= f.button :submit, "Make a Booking", class: "btn btn-primary"%>
    </div>
  <% end %>
  </div>
</div>
</div>
