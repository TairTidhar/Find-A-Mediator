<!-- show.html.erb -->

<div class="container">
  <div class="god">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1 class= "godname"><%= @god.name %></h1>
      <p><h3>Rent me in:</h3> <%= @god.location %></p>
      <p><h3>About me: </h3><%= @god.description %></p>
      <p><h3>Price ($/hr):</h3><%= @god.price %></p>
      <p><%= cl_image_tag @god.photo, height: 300, width: 400, crop: :fill %></p>
      <%= @god.user.name %>
     <p><%= link_to "Back to all Gods", gods_path %> </p>
     <p> <%= link_to "Destroy God", god_path(@god), method: :delete %></p>
     <p> <%= link_to "Update God", edit_god_path(@god) %></p>
    </div>
  </div>
</div>

<div class="booking_form">
  <h1>Book this God:</h1>
  <%= simple_form_for([@god, @booking]) do |f| %>
    <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.button :submit, "Make a Booking", class: "btn btn-primary"%>
    <p>Enter dates to see the total price, including additional fees and any taxes.</p>
  <% end %>
  </div>
</div>
