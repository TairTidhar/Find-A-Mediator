
<div class="container-god">
    <div class="row">
      <div class="col-md-5">
        <div class="padding-image">
            <%= cl_image_tag @god.photo, height: 300, width: 400, crop: :fill, class:"rounded-image" %>
        </div>
      </div>

      <div class="col-md-6">
        <h1><%= @god.name %></h1>
        <h4> Located in <%= @god.location %></h4>
        <h4> <%= @god.description %></h4>
        <h4>Practice area:
        <% @god.powers.each do |power| %>
          <%= power.name %>
        <% end %>
        </h4>

        <% if current_user %>
          <div class="buttons">
            <p>
              <%= link_to "Remove mediator", god_path(@god), method: :delete, class: "btn btn-primary"%>
              <%= link_to "Update mediator", edit_god_path(@god), class: "btn btn-primary" %>
              <% end %>
            </p>
          </div>


          <h2> Book a session with <%= @god.name %></h2>
          <%= simple_form_for([@god, @booking]) do |f| %>
<!--           <div class="col-md-6">
 -->      <%= f.input :start_date, as: :string, required: true, input_html: {class: "datepicker"} %>
          <%= f.input :end_date, as: :string, required: true, input_html: {class: "datepicker"} %>

          <%= f.button :submit, "Make a booking", class: "btn btn-primary"%>

          <% end %>
  </div>
</div>
</div>
