

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-6 col-md-offset-3">

    <div class = "form-post">
      <h2>Offer mediation services</h2>
    <%= simple_form_for(@mediator) do |f| %>
      <div class="row">
       <div class= "col-xs-6">
          <%= f.input :name, placeholder: "Name" %>
       </div>
       <div class= "col-xs-6">
          <%= f.input :location, placeholder: "City"%>
       </div>
       <div class= "col-xs-6">
          <%= f.input :photo, placeholder: "Please upload photo" %>
          <%= f.input :photo_cache, as: :hidden %>
       </div>
       <div class= "col-xs-12">
          <div class="form-group">
            <label class="control-label check_boxes optional">Practice areas</label>
            <input type="hidden" name="mediator[power_ids][]" value="">
            <div class="power-choices">
              <% Power.all.each do |power| %>
                <input type="checkbox" class="hidden" value="<%= power.id %>" name="mediator[power_ids][]" id="mediator_power_ids_<%= power.id %>">
                <label class="power-choice" for="mediator_power_ids_<%= power.id %>">
                  <%= power.name %>
                  <i class="fa fa-check"></i>
                </label>
              <% end %>
             </div>
          </div>
       </div>
       <div class= "col-xs-12">
          <%= f.input :description, placeholder: "Background and achievements" %>
       </div>
       <div class= "col-xs-12">
          <%= f.button :submit, "Submit", class: "btn btn-primary" %>
      <% end %>
      </div>
    </div>
