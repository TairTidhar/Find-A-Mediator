<div class="container">
  <h1 class="page-header">Bookings</h1>
<div class="container">
    <div>
    <% current_user.bookings.each do |booking| %>
  <div>
  <p> Your booking of <%= booking.mediator.name %> starts on
    <% start_date = booking.start_date %>
    <% end_date = booking.end_date %> <%= start_date.strftime('%A, %d %b %y') %></p>
  </div>
  <div>
    <%= link_to "View my booking", booking_path(booking), class: "btn" %>
  </div>
  <% end %>
</div>
</div>
</div>
